package {	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.display.SimpleButton;	public class ContainerScreen extends MovieClip {		public var bouton_oui_cad:SimpleButton;		public var bouton_non_cad:SimpleButton;		public var bouton_oui_obs:SimpleButton;		public var bouton_non_obs:SimpleButton;		public var bouton_oui_son:SimpleButton;		public var bouton_non_son:SimpleButton;		public var bouton_lent:SimpleButton;		public var bouton_normal:SimpleButton;		public var bouton_rapide:SimpleButton;		public var bouton_oui_cad_V:SimpleButton;		public var bouton_non_cad_V:SimpleButton;		public var bouton_oui_obs_V:SimpleButton;		public var bouton_non_obs_V:SimpleButton;		public var bouton_oui_son_V:SimpleButton;		public var bouton_non_son_V:SimpleButton;		public var bouton_lent_V_:SimpleButton;		public var bouton_normal_V_:SimpleButton;		public var bouton_rapide_V_:SimpleButton;		public var screen:Sprite;		public var cadre:Boolean=false;		public var obstacle:Boolean=false;		public var sound=true;		public var speed:Number=2;//(1,2,3)		public function ContainerScreen() {		}		public function addContainerScreen():MovieClip {			screen= new Screen();			this.addChild(screen);			return this;		}		public function addContainerEntryScreen(startScreen):Sprite {			startScreen=new StartScreen();			this.addChild(startScreen);			return startScreen;		}		public function addGameOverScreen():MovieClip {			screen= new GameOverScreen();			this.addChild(screen);			return this;		}		public function addHelpScreen():MovieClip {			screen= new HelpScreen();			this.addChild(screen);			return this;		}		public function addOptionScreen():MovieClip {			screen=new ScreenOptions();			this.addChild(screen);			return this;		}		public function addPauseScreen() {			screen= new EcranPause();			this.addChild(screen);		}		public function removePauseScreen(){			this.removeChild(screen);		}						public function initRadioButtonOuiCadre() {			bouton_oui_cad=new bouton_oui_cadre();			this.addChild(bouton_oui_cad);			bouton_oui_cad.x=350;			bouton_oui_cad.y=140;			bouton_oui_cad.addEventListener(MouseEvent.CLICK,MouseClickYesWall);		}		public function initRadioButtonOuiObs() {			bouton_oui_obs=new bouton_oui_obstacle();			this.addChild(bouton_oui_obs);			bouton_oui_obs.x=350;			bouton_oui_obs.y=230;			bouton_oui_obs.addEventListener(MouseEvent.CLICK,MouseClickYesObs);		}		public function initRadioButtonOuiSound() {			bouton_oui_son=new bouton_oui_sound_V();			this.addChild(bouton_oui_son);			bouton_oui_son.x=350;			bouton_oui_son.y=320;			bouton_oui_son.addEventListener(MouseEvent.CLICK,MouseClickYesSound);		}		public function initRadioButtonLent() {			bouton_lent=new bouton_lent_();			this.addChild(bouton_lent);			bouton_lent.x=350;			bouton_lent.y=410;			bouton_lent.addEventListener(MouseEvent.CLICK,MouseClickSlow);		}		public function initRadioButtonNorm() {			bouton_normal=new bouton_normal_V();			this.addChild(bouton_normal);			bouton_normal.x=450;			bouton_normal.y=410;			bouton_normal.addEventListener(MouseEvent.CLICK,MouseClickMedium);		}		public function initRadioButtonRapide() {			bouton_rapide=new bouton_rapide_();			this.addChild(bouton_rapide);			bouton_rapide.x=550;			bouton_rapide.y=410;			bouton_rapide.addEventListener(MouseEvent.CLICK,MouseClickFast);		}		public function initRadioButtonNonCadre() {			bouton_non_cad=new bouton_non_cadre_V();			this.addChild(bouton_non_cad);			bouton_non_cad.x=450;			bouton_non_cad.y=140;			bouton_non_cad.addEventListener(MouseEvent.CLICK,MouseClickNoWall);		}		public function initRadioButtonNonObs() {			bouton_non_obs=new bouton_non_obstacle_V();			this.addChild(bouton_non_obs);			bouton_non_obs.x=450;			bouton_non_obs.y=230;			bouton_non_obs.addEventListener(MouseEvent.CLICK,MouseClickNoObs);		}		public function initRadioButtonNonSound() {			bouton_non_son=new bouton_non_sound();			this.addChild(bouton_non_son);			bouton_non_son.x=450;			bouton_non_son.y=320;			bouton_non_son.addEventListener(MouseEvent.CLICK,MouseClickNoSound);		}		public function initBoutonValider(bouton_valider):SimpleButton {			bouton_valider=new bouton_valider_();			this.addChild(bouton_valider);			bouton_valider.x=500;			bouton_valider.y=20;			return bouton_valider;		}		//---------------------------------------------------------------------------------------------------------------		public function MouseClickYesWall(E:MouseEvent) {			cadre=true;			initRadioButtonNonCadre();			bouton_oui_cad_V=new bouton_oui_cadre_V();			this.addChild(bouton_oui_cad_V);			bouton_oui_cad_V.x=350;			bouton_oui_cad_V.y=140;			bouton_non_cad=new bouton_non_cadre();			this.addChild(bouton_non_cad);			bouton_non_cad.x=450;			bouton_non_cad.y=140;			bouton_non_cad.addEventListener(MouseEvent.CLICK,MouseClickNoWall);		}		public function MouseClickNoWall(E:MouseEvent) {			cadre=false;			initRadioButtonOuiCadre();			bouton_non_cad_V=new bouton_non_cadre_V();			this.addChild(bouton_non_cad_V);			bouton_non_cad_V.x=450;			bouton_non_cad_V.y=140;		}		public function MouseClickYesObs(E:MouseEvent) {			initRadioButtonNonObs();			bouton_oui_obs_V=new bouton_oui_obstacle_V();			this.addChild(bouton_oui_obs_V);			bouton_oui_obs_V.x=350;			bouton_oui_obs_V.y=230;			bouton_non_obs=new bouton_non_obstacle();			this.addChild(bouton_non_obs);			bouton_non_obs.x=450;			bouton_non_obs.y=230;			bouton_non_obs.addEventListener(MouseEvent.CLICK,MouseClickNoObs);			obstacle=true;		}		public function MouseClickNoObs(E:MouseEvent) {			initRadioButtonOuiObs();			bouton_non_obs_V=new bouton_non_obstacle_V();			this.addChild(bouton_non_obs_V);			bouton_non_obs_V.x=450;			bouton_non_obs_V.y=230;			obstacle=false;		}		public function MouseClickYesSound(E:MouseEvent) {			initRadioButtonNonSound();			bouton_oui_son_V=new bouton_oui_sound_V();			this.addChild(bouton_oui_son_V);			bouton_oui_son_V.x=350;			bouton_oui_son_V.y=320;			sound=true;		}		public function MouseClickNoSound(E:MouseEvent) {			initRadioButtonOuiSound();			bouton_non_son_V=new bouton_non_sound_V();			this.addChild(bouton_non_son_V);			bouton_non_son_V.x=450;			bouton_non_son_V.y=320;			bouton_oui_son=new bouton_oui_sound();			this.addChild(bouton_oui_son);			bouton_oui_son.x=350;			bouton_oui_son.y=320;			sound=false;			bouton_oui_son.addEventListener(MouseEvent.CLICK,MouseClickYesSound);		}		public function MouseClickSlow(E:MouseEvent) {			initRadioButtonNorm();			initRadioButtonRapide();			bouton_lent_V_=new bouton_lent_V();			this.addChild(bouton_lent_V_);			bouton_lent_V_.x=350;			bouton_lent_V_.y=410;			bouton_normal=new bouton_normal_();			this.addChild(bouton_normal);			bouton_normal.x=450;			bouton_normal.y=410;			speed=1;			bouton_normal.addEventListener(MouseEvent.CLICK,MouseClickMedium);		}		public function MouseClickMedium(E:MouseEvent) {			initRadioButtonLent();			initRadioButtonRapide();			bouton_normal_V_=new bouton_normal_V();			this.addChild(bouton_normal_V_);			bouton_normal_V_.x=450;			bouton_normal_V_.y=410;			speed=2;		}		public function MouseClickFast(E:MouseEvent) {			initRadioButtonLent();			initRadioButtonNorm();			bouton_rapide_V_=new bouton_rapide_V();			this.addChild(bouton_rapide_V_);			bouton_rapide_V_.x=550;			bouton_rapide_V_.y=410;			bouton_normal=new bouton_normal_();			this.addChild(bouton_normal);			bouton_normal.x=450;			bouton_normal.y=410;			speed=3;			bouton_normal.addEventListener(MouseEvent.CLICK,MouseClickMedium);		}		public function recupOptions(vectRes:Array) {			vectRes[0]=cadre;			vectRes[1]=obstacle;			vectRes[2]=sound;			vectRes[3]=speed;			return vectRes;		}	}}