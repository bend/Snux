package {	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;		public class ContainerScoreBarre extends MovieClip {		private var scoreBarre:MovieClip;		public function ContainerScoreBarre(pos_x:Number, pos_y:Number) {			this.x=pos_x;			this.y=pos_y;				}		public function addContainerScoreBarre():MovieClip {			scoreBarre= new ScoreBarre();			this.addChild(scoreBarre);			return this;		}				public function addTextField():TextField{			var containerScore:Sprite = new Sprite();			var containerScoreValue:Sprite = new Sprite();			this.addChild(containerScore);			this.addChild(containerScoreValue);			containerScore.x=250;			containerScoreValue.x=310;			var txt:TextField = new TextField();			var score:TextField= new TextField();				var tf:TextFormat = new TextFormat(); 			tf.size = 100; 			tf.bold =true;			txt.setTextFormat(tf);			txt.text = "Score: ";			containerScore.addChild(txt);			containerScoreValue.addChild(score);			return score;		}				public function addTimeField():TextField{			var containerTime:Sprite= new Sprite();			var containerTimeValue:Sprite= new Sprite();			this.addChild(containerTime);			this.addChild(containerTimeValue);			containerTime.x=360;			containerTimeValue.x=440;			var txt:TextField = new TextField();			var time:TextField = new TextField();			txt.text="Temps écoulé";			containerTime.addChild(txt);			containerTimeValue.addChild(time);			return time;		}			}//fin class}//fin package